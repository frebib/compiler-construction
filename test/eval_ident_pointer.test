/% CODE %/

// This tests pointer to an identifier
function evalIdentPointer() {
  a = 321;
  b = 235;
  x = if (1 < 2) a else b;

  return ~~x;
}

/% TREE %/

Program [
  ("evalIdentPointer", [], Seq (
    Asg (Identifier "a", Const 321),
    Seq (
      Asg (Identifier "b", Const 235),
      Seq (
        Asg (
          Identifier "x",
          If (BinaryOp (Lth, Const 1, Const 2),
            Identifier "a",
            Identifier "b"
          )
        ),
        Deref (Deref (Identifier "x"))
      )
    )
  ))
]

/% RESULT %/

[
  Const 321
]

/% END %/
